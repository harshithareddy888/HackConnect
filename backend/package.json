{
  "name": "hackconnect-backend",
  "version": "1.0.0",
  "description": "Backend for HackConnect - A platform for hackathon team formation",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "set NODE_ENV=production && node server.js",
    "dev": "set NODE_ENV=development && nodemon server.js",
    "test": "set NODE_ENV=test && jest --watch --runInBand --detectOpenHandles",
    "test:ci": "set NODE_ENV=test && jest --ci --coverage --detectOpenHandles",
    "test:unit": "set NODE_ENV=test && jest __tests__/unit --runInBand",
    "test:integration": "set NODE_ENV=test && jest __tests__/integration --runInBand"
  },
  "keywords": [
    "hackathon",
    "team",
    "matching",
    "mern"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-joi-validation": "^5.0.1",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "joi": "^17.8.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.5",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.13.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
